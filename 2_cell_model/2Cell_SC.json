{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 5000,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -70.0
  },
  "inputs": {
    "bg_pn_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/2_cell_inputs/bg_pn_spikes.h5",
      "node_set": "bg_pn"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "syn_report4": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "int2pyrKIM",
      "file_name": "syns_int2pyr.h5"
    },
    "syn_report7": {
      "cells": "all",
      "variable_name": "g_gaba",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "int2pyrKIM",
      "file_name": "g_gaba.h5"
    },
    "syn_report4.5": {
      "cells": "all",
      "variable_name": "capoolcon",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "int2pyrKIM",
      "file_name": "syns_int2pyr_cai.h5"
    },
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/2Cell_CC.json"
}
